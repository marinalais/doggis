<%- model_class = PetService -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @pet_service.duration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @pet_service.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @pet_service.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @pet_service.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pataz_value_free) %>:</strong></dt>
  <dd><%= @pet_service.pataz_value_free %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pataz_amount) %>:</strong></dt>
  <dd><%= @pet_service.pataz_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @pet_service.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pet_services_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pet_service_path(@pet_service), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pet_service_path(@pet_service),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
