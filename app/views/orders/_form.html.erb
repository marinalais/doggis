<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :orderdate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :orderdate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:orderdate) %>
  </div>
  <div class="form-group">
    <%= f.label :totalvalue, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :totalvalue, :class => 'form-control' %>
    </div>
    <%=f.error_span(:totalvalue) %>
  </div>
  <div class="form-group">
    <%= f.label :orderitem_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :orderitem_id, OrderItem.all, :id, :id, prompt: true  %> 
    </div>
    <%=f.error_span(:orderitem_id) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :user_id, User.all, :id, :email, prompt: true  %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :customer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :customer_id, Customer.all, :id, :name, prompt: true  %>
    </div>
    <%=f.error_span(:customer_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
