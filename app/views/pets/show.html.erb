<%- model_class = Pet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @pet.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:breed) %>:</strong></dt>
  <dd><%= @pet.breed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pettype) %>:</strong></dt>
  <dd><%= @pet.pettype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:petsize) %>:</strong></dt>
  <dd><%= @pet.petsize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @pet.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allows_photo) %>:</strong></dt>
  <dd><%= @pet.allows_photo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pets_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pet_path(@pet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pet_path(@pet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
